{% extends 'base.html.twig' %}

{% block title %}Flotte de PC{% endblock %}

{% block body %}
    <div class="catalogue_container">
        <div class="catalogue_filtres">
            <h2>Filtres :</h2>
            {{ form_start(form) }}
            {{form_row(form.q) }}
            {{form_row(form.centres) }}
            {{form_row(form.dispoNow) }}
            <button>Filtrer</button>
            {{ form_end(form) }}
        </div>

        <div>
            <div>
            {% if flottes is not empty %}
            {% for flotte in flottes %}
                <a href="{{ path('app_flottes_details', {'id': flotte.id}) }}">
                    <div class="catalogue_card">
                      <h2>{{ flotte.libelle }}</h2>
                        {{ flotte.centre.libelle }}
                    </div>
                </a>

            {% endfor %}
            {% else %}
                <div class="catalogue_card">
                    Rien ne correspond Ã  votre recherche !
                </div>
            {% endif %}
            </div>
        </div>
    </div>
{% endblock %}