{% extends 'catalogue.html.twig' %}

{% block title %}Flottes de PC{% endblock %}

{% block div %}
{% if flottes is not empty %}
        {% for flotte in flottes %}
            <div class="catalogue_card">
                <div class="catalogue_info">
                    <h2>{{ flotte.libelle }}</h2>
                    <p> Centre : {{ flotte.centre.libelle }}</p>
                    <p> Marque : {{ flotte.marque.libelle }}</p>

                    {% if is_granted('ROLE_LOUEUR') %}<a href="{{ path('app_flottes_details', {'id': flotte.id}) }}"  >{% endif %}
                        <button>Réserver un créneau</button>
                        {% if is_granted('ROLE_LOUEUR') %}</a>{% endif %}
                </div>

                <div id="flotte_{{ flotte.id }}" class="catalogue_calendrier">
                </div>

            </div>
        {% endfor %}
    {% else %}
        <div class="catalogue_card">
            Rien ne correspond à votre recherche !
        </div>
    {% endif %}
{% endblock %}