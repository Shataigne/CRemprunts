{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="home_container">
        <section class="home_recherche">
            <h2>Recherche rapide :</h2>

        </section>
        <div class="recherche_container">
            {{ form_start(form) }}
            <div class="recherche">
                <div class="recherche_card">
                    <div class="recherche_row">
                        <div>
                            {{ form_label(form.action) }}
                            {{ form_widget(form.action) }}
                        </div>
                        <div>
                            {{ form_label(form.q) }}
                            {{ form_widget(form.q) }}
                        </div>
                        <div>
                            {{ form_label(form.centres) }}
                            {{ form_widget(form.centres) }}
                        </div>
                    </div>
                    <div class="recherche_row">
                        <div>
                            {{ form_label(form.dispoNow) }}
                            {{ form_widget(form.dispoNow) }}
                        </div>
                        <div>
                            {{ form_label(form.dispoLe) }}
                            {{ form_widget(form.dispoLe) }}
                        </div>
                        <div>
                            {{ form_label(form.dispoMin) }}
                            {{ form_widget(form.dispoMin) }}
                        </div>
                        <div>
                            {{ form_label(form.dispoMax) }}
                            {{ form_widget(form.dispoMax) }}
                        </div>
                    </div>
                </div>
                <button type="submit">Recherche</button>
            </div>
            {{ form_end(form) }}
