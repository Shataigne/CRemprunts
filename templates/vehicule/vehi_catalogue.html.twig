{% extends 'base.html.twig' %}

{% block title %}Vehicules{% endblock %}

{% block body %}
<div class="catalogue_container">
    {{ form_start(form) }}
    <div class="catalogue_filtres">
        <h2>Filtres :</h2>
            {{ form_label(form.q) }}
            {{form_widget(form.q) }}
            {{form_label(form.centres)}}
            {{form_widget(form.centres)}}
            {{form_row(form.dispoNow) }}
            <button>Filtrer</button>

    </div>
    {{ form_end(form) }}
    <div>
        <div>
            {% if vehicules is not empty %}
                {% for vehicule in vehicules %}
                    {% if is_granted('ROLE_LOUEUR') %} <a href="{{ path('app_vehicule_details', {'id': vehicule.id}) }}">{% endif %}

                        <div class="catalogue_card">
                            <p>{{ vehicule.libelle }}</p>
                            <p> Centre : {{ vehicule.centre.libelle }}</p>
                        </div>

                    {% if is_granted('ROLE_LOUEUR') %} </a>{% endif %}
                {% endfor %}
            {% else %}
                <div class="catalogue_card">
                    Rien ne correspond Ã  votre recherche !
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}