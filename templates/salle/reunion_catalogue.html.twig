{% extends 'base.html.twig' %}

{% block title %}Ordinateurs{% endblock %}

{% block body %}
    <div class="catalogue_container">
        <div class="catalogue_filtres">
            <h2>Filtres :</h2>
            {{ form_start(form) }}
            {{form_row(form.q) }}
            {{form_row(form.centres) }}
            {{form_row(form.dispoNow) }}
            <button>Filtrer</button>
            {{ form_end(form) }}
        </div>

        <div>
            <div>
                {% if salles is not empty %}
                    {% for salle in salles %}
                        <a href="{{ path('app_salles_details', {'id': salle.id}) }}">

                            <div class="catalogue_card">
                                <h2>Salle n {{ salle.numero }}</h2>

                                numéro : {{ salle.numero }}<br>
                                batiment : {{ salle.batiment }}<br>
                                étage : {{ salle.etage }}<br>
                                {{ salle.centre.libelle }}<br>


                            </div>
                        </a>
                    {% endfor %}
                {% else %}
                    <div class="catalogue_card">
                        Rien ne correspond à votre recherche !
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}